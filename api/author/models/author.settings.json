{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "author",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "bio": {
      "type": "richtext"
    },
    "posts": {
      "private": true,
      "collection": "post",
      "via": "author"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
